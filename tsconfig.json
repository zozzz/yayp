{
	"compilerOptions": {
		"charset": "utf-8",
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"noEmitOnError": true,
		"noUnusedLocals": false,
		"declaration": true,
		"outDir": "./dist",
		"pretty": true,
		"rootDir": "./",
		"target": "es6",
		"sourceMap": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"preserveConstEnums": false,
		// "strictNullChecks": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"tools/*.ts"
	],
	"compileOnSave": true
}